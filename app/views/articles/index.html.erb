<div style="display: flex; justify-content: center; flex-direction: column; align-items: center; gap: 2">
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.id %></td>
          <td><%= link_to article.title, article %></td>
          <td><%= article.body %></td>
          <td style="display: flex; gap: 2">
            <%= link_to "Edit", edit_article_path(article) %> | 
            <%= button_to "Delete", article, method: :delete, data: { confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= link_to "New article", :new_article %>
  </div>
</div>